{
    "agent": {
      "metrics_collection_interval": 10,
      "logfile": "/opt/aws/amazon-cloudwatch-agent/logs/amazon-cloudwatch-agent.log",
      "region": "eu-west-1"
    },
    "logs": {
      "logs_collected": {
        "files": {
          "collect_list": [
            {
              "file_path": "/cc/access.log",
              "log_group_name": "cruisecontrol",
              "log_stream_name": "cruise_control_{date}",
              "timezone": "UTC"
            }
          ]
        }
      }
    }
  }